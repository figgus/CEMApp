<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CemAppCross.Views.CrearNota">
    <ContentPage.Content>
        <StackLayout BackgroundColor="BurlyWood">
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtCalificacion" />
            <DatePicker x:Name="txtFecha"/>
            <Entry x:Name="txtNumeral" />
            <Entry x:Name="txtUsuario" />
            <Entry x:Name="txtProgramaEstudio" />
            <Button x:Name="btnCrear" Text="Registrar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>