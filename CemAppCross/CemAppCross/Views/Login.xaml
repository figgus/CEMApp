<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CemAppCross.Views.Login">
    <ContentPage.Content>
        <StackLayout BackgroundColor="BurlyWood">
            <Label Text="Ingrese sus credenciales"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="Nombre" x:Name="txtusername" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="Password" x:Name="txtpassword" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

            <Button Text="Ingresar" x:Name="btnIngresar" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>